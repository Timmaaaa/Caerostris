@inject SpotifyService Spotify


<NavigationThumbnailCard Url=@($"{Spotify.ExploreAlbumUrl}{Track.Album.Id}")
                         Play=@(() => Spotify.PlayTrack(null, Track.Uri))
                         Width="300px"
                         Thumbnail=@Track.Album.Images.AtLeastOfHeight(300)
                         Title=@Track.Name
                         Details=@($"{Track.Artists.GetArtists()} • {Track.Album.Name}") />


@code
{
    [Parameter]
    public FullTrack Track { get; set; } = null!;
}
