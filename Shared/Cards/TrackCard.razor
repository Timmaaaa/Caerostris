@using Caerostris.Shared.Controls.Links 


@namespace Caerostris.Shared.Cards


@inject SpotifyService Spotify


    <NavigationThumbnailCard Url=@($"{Spotify.ExploreAlbumUrl}{Track.Album.Id}")
                             TrackUri=@Track.Uri
                             Thumbnail=@Track.Album.Images
                             Title=@Track.Name>
    
        
        <Details><ArtistLinkList Artists=@Track.Artists /> • @Track.Album.Name</Details>
        
    </NavigationThumbnailCard>


@code
{
    [Parameter]
    public FullTrack Track { get; set; } = default!;
}
