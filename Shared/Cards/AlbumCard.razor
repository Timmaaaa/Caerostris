@namespace Caerostris.Shared.Cards


@inject SpotifyService Spotify


    <NavigationThumbnailCard Url=@($"{Spotify.Explore.ExploreAlbumUrl}{Album.Id}")
                             ContextUri=@Album.Uri
                             Thumbnail=@Album.Images
                             Title=@Album.Name>

        <Details>@($"{Album.ReleaseDate.Split('-').FirstOrDefault()}{(Album.AlbumType.Equals("album") ? "" : ($" • {Album.AlbumType.ToUpper()}"))}")</Details>

    </NavigationThumbnailCard>


@code
{
    [Parameter]
    public SimpleAlbum Album { get; set; } = default!;
}
