@namespace Caerostris.Shared.Cards


@inject SpotifyService Spotify


    <NavigationThumbnailCard Url=@($"{Spotify.Explore.ExplorePlaylistUrl}{Playlist.Id}")
                             ContextUri=@Playlist.Uri
                             Thumbnail=@Playlist.Images
                             Title=@Playlist.Name>

        <Details>@($"{Playlist.Owner.DisplayName} • {Playlist.Tracks.Total} tracks")</Details>

    </NavigationThumbnailCard>


@code
{
    [Parameter]
    public SimplePlaylist Playlist { get; set; } = default!;
}
