@namespace Caerostris.Shared.Cards


@inject SpotifyService Spotify


    <NavigationThumbnailCard Url=@($"{Spotify.ExplorePlaylistUrl}{Playlist.Id}")
                             ContextUri=@Playlist.Uri
                             Thumbnail=@Playlist.Images
                             Title=@Playlist.Name
                             Details=@($"{Playlist.Owner.DisplayName} • {Playlist.Tracks.Total} tracks") />


@code
{
    [Parameter]
    public SimplePlaylist Playlist { get; set; } = default!;
}
