@page "/callback"


@namespace Caerostris.Pages.Callback


@inject IStringLocalizer<Text> L
@inject SpotifyService Spotify
@inject NavigationManager NavManager


    <CenteredInfo Text=@L["ShouldBeRedirectedSoon"] />


@code
{
    protected override async Task OnInitializedAsync()
    {
        await Spotify.ContinueAuthOnCallback(NavManager.ToAbsoluteUri(Spotify.RelativeCallbackUrl).ToString());
    }
}