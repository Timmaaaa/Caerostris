@using Caerostris.Services.Spotify

@inject SpotifyService Spotify
@inject NavigationManager NavManager

<hr>

<p>Note: this app requires you to connect a Spotify Premium account.</p>

<hr>

<button @onclick="OnConnectAccountButtonClick" type="button" class="btn btn-primary float-right">Connect account</button>


@code
{
    private async Task OnConnectAccountButtonClick()
    {
        await Spotify.StartAuthWithImplicitGrant(NavManager.ToAbsoluteUri("/callback").ToString());
    }
}
