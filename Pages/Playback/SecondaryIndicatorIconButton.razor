<div @onclick=@OnClick class="btn @(On ? "btn-light" : "btn-outline-light") border-0 px-2 m-2">
    <i class="material-icons md-24">@Icon</i>
</div>

@code
{
    [Parameter]
    public Func<Task>? OnClick { get; set; }

    [Parameter]
    public string? Icon { get; set; }

    [Parameter]
    public bool On { get; set; }
}
